<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editCompareCity"
        android:layout_width="224dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="Search city"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/buttonSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="25dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editCompareCity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPopulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:text="Population"
        app:layout_constraintBottom_toTopOf="@+id/buttonWorkplace"
        app:layout_constraintEnd_toStartOf="@+id/buttonWeather"
        app:layout_constraintTop_toBottomOf="@+id/editCompareCity"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/buttonWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Weather"
        app:layout_constraintBottom_toTopOf="@+id/buttonWorkplace"
        app:layout_constraintEnd_toStartOf="@+id/buttonPolitical"
        app:layout_constraintTop_toBottomOf="@+id/editCompareCity"
        app:layout_constraintVertical_bias="0.318" />

    <Button
        android:id="@+id/buttonPolitical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Political distribution"
        app:layout_constraintBottom_toTopOf="@+id/buttonEmployment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCompareCity"
        app:layout_constraintVertical_bias="0.531" />

    <Button
        android:id="@+id/buttonWorkplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Workplace self-sufficiency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCompareCity"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonEmployment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Emploment Rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/buttonWorkplace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

</androidx.constraintlayout.widget.ConstraintLayout>